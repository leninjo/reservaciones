<section class="hero">
    <div class="columns my-3">
        <div class="column"></div>
        <div class="column is-three-quarters">
            <p class="subtitle is-2 has-text-centered">Reportes</p>
                <div class="container">
                    <div class="field is-pulled-right">
                <!--<%= link_to "Exportar a PDF", root_path, class: "button is-primary"%>-->
                    <%= form_tag reports_path, method: :get do %>
                    <div class="field has-addons">
                        <div class="control">
                            <%= date_field_tag :search_r, params[:s], placeholder: "dd/mm/aaaa", class: "input"%>
                            <%= date_field_tag :search_r, params[:e], placeholder: "dd/mm/aaaa", class: "input"%>
                        </div>
                        <div class="control">
                            <%= submit_tag "Buscar", class: "mdi mdi-search button is-link is-light"%>
                            <%= link_to "", bookings_path, class: "mdi mdi-broom has-text-dark mdi-24px limpiar" %>
                        </div>
                        <% end %>
                    </div>
                    </div>
                </div>
            <table class="table is-fullwidth is-striped">
                <thead>
                    <tr>
                        <th>Responsable</th>
                        <th>Telefono</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Monto</th>
                        <th colspan="2">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% @reservas.each do |reserva| %>
                    <tr>
                        <td><%= reserva.nombre%></td>
                        <td><%= reserva.telefono%></td>
                        <td><%= reserva.fecha%></td>
                        <td><%= reserva.hora%></td>
                        <td>Q<%= reserva.monto%></td>
                        <td><%= link_to "Editar", edit_booking_path(reserva), class: "has-text-success	"%></td>
                        <td><%= link_to "Eliminar", booking_path(reserva), method: :delete, class: "has-text-danger", data: {confirm: "Deseas eliminar esta reservaciÃ³n?"}%></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
        <div class="column"></div>
    </div>
</section>